<!DOCTYPE html>
<html>
   <head>
     <%- include('.././layout/head') %>  
   <link rel="stylesheet" href="/styles/phrases.css"> 
   </head>
   
<body>
      <h6>Hello, <br>Welcome ON Board!<br><a class="logout" href="/logout">LOGOUT</a></h6>
      <header>
       <%- include('.././layout/header') %>  
      </header>
      
       
     <ul>
      <% textarr.forEach((text,uid)=>{ %>
         <li>
            <div class="grid-container">
               <div class="grid-item">
               <form>
               <textarea id="text-<%=uid%>" type="text"  name="ps"><%= text %></textarea>    
               </div>

               <div class="grid-item">
               <select name="phraselist" id="phrases-<%=uid%>">
                  <% langs.forEach(lang=>{ %>
                     <option  value="<%= lang[0] %>">
                        <%= lang[1] %>
                     </option>
         
                     <% }) %>     
                      
               </select>
               
               <button  class="formbutton" type='button' data-id="<%=uid%>">submit</button>
              </form>
              </div> 

              <div class="grid-item">
              <textarea id="textq-<%=uid%>" type="text"  name="pss"></textarea>    
            </div>
         </li>
        

         <% }) %>     
     </ul>
       
       

     


